{
    auto_https off
}

:80 {
    handle_path /static/* {
        root * /app/staticfiles
        file_server
    }

    handle_path /media/* {
        root * /app/media
        file_server
    }

    reverse_proxy backend:8000 {
        header_up Host {host}
        header_up X-Real-IP {remote}
    }
}